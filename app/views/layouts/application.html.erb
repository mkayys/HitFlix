<!DOCTYPE html>
<html>
  <head>
    <title>HitFlix</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>


    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>

    <script type="text/javascript">
      window.movies = "<%= image_url('movies.mp4') %>";
    </script>
    
    <% if current_user %>
      <script type="text/javascript">
        window.currentUser = {
          id: <%= current_user.id %>,
          email: "<%= current_user.email %>"
        };
      </script>
    <% end %>

  </head>

  <body>
    <%= yield %>
  </body>
</html>
