<!DOCTYPE html>
<html>
  <head>
    <title>HitFlix</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300;0,400;0,600;0,700;0,800;1,300&display=swap" rel="stylesheet">

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>

    <script type="text/javascript">
      window.splash = "<%= image_url('splash.mp4') %>";
      window.hitflix = "<%= image_url('hitflix.png') %>";
      window.home = "<%= image_url('netflix-home.jpg') %>";
    </script>
    
    <% if current_user %>
      <script type="text/javascript">
        window.currentUser = {
          id: <%= current_user.id %>,
          email: "<%= current_user.email %>"
        };
      </script>
    <% end %>

  </head>

  <body>
    <%= yield %>
  </body>
</html>
